<body>
    <div class="container">
        <!-- Login Screen -->
        <div id="loginScreen" class="login-screen">
            <h1>ðŸ’¬ MiniChat</h1>
            <p>Connect with your contacts in real-time</p>
            
            <div class="login-form">
                <div class="server-config">
                    <label>Server URL</label>
                    <input type="text" id="serverInput" value="http://localhost:5000" placeholder="http://localhost:5000">
                </div>
                
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input type="text" id="mobileInput" placeholder="Enter your mobile number" autofocus>
                </div>
                
                <div class="form-group">
                    <label>Name (optional)</label>
                    <input type="text" id="nameInput" placeholder="Enter your name">
                </div>
                
                <div class="button-group">
                    <button class="btn-secondary" onclick="register()">Register</button>
                    <button class="btn-primary" onclick="login()">Login</button>
                </div>
            </div>
        </div>
        
        <!-- Main Chat UI -->
        <div id="mainUI" class="hidden">
            <div class="chat-header">
                <h2>ðŸ’¬ MiniChat</h2>
                <div class="user-info">
                    <span class="status-indicator status-online"></span>
                    <span id="userInfo"></span>
                </div>
            </div>
            
            <div class="chat-body">
                <!-- Contacts Sidebar -->
                <div class="contacts-sidebar">
                    <div class="contacts-header">
                        <h3>Contacts</h3>
                        <button class="refresh-btn" onclick="loadContacts()" title="Refresh contacts">â†»</button>
                    </div>
                    <div class="contacts-list" id="contactsList">
                        <!-- Contacts will be loaded here -->
                    </div>
                </div>
                
                <!-- Chat Area -->
                <div class="chat-area">
                    <div class="chat-area-header">
                        <h3 id="chatTitle">Select a contact to start chatting</h3>
                    </div>
                    
                    <div class="messages-container" id="messagesContainer">
                        <div class="empty-state">
                            <div class="empty-state-icon">ðŸ’¬</div>
                            <p>Select a contact to start chatting</p>
                        </div>
                    </div>
                    
                    <div id="imagePreview" class="image-preview hidden"></div>
                    
                    <div class="message-input-area">
                        <input type="file" id="imageInput" accept="image/*" style="display: none" onchange="handleImageSelect()">
                        <button class="icon-btn" onclick="document.getElementById('imageInput').click()" title="Attach image">ðŸ“Ž</button>
                        <input type="text" id="messageInput" placeholder="Type a message..." onkeypress="handleKeyPress(event)">
                        <button class="send-btn" onclick="sendMessage()">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let SERVER = 'http://localhost:5000';
        let socket;
        let currentUser = null;
        let selectedContact = null;
        let contacts = [];
        let pendingImage = null;

        // Register new user
        async function register() {
            const mobile = document.getElementById('mobileInput').value.trim();
            const name = document.getElementById('nameInput').value.trim();
            SERVER = document.getElementById('serverInput').value.trim();
            
            if (!mobile) {
                alert('Please enter your mobile number');
                return;
            }
            
            try {
                const response = await fetch(`${SERVER}/register`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ mobile, name })
                });
                
                const data = await response.json();
                
                if (data.ok) {
                    alert('âœ… Registration successful! Please login now.');
                } else {
                    alert(`âŒ Error: ${data.error || 'Registration failed'}`);
                }
            } catch (error) {
                alert(`âŒ Connection Error: ${error.message}\n\nMake sure the server is running at ${SERVER}`);
            }
        }

        // Login user
        async function login() {
            const mobile = document.getElementById('mobileInput').value.trim();
            SERVER = document.getElementById('serverInput').value.trim();
            
            if (!mobile) {
                alert('Please enter your mobile number');
                return;
            }
            
            try {
                const response = await fetch(`${SERVER}/login`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ mobile })
                });
                
                const data = await response.json();
                
                if (data.ok) {
                    currentUser = {
                        mobile: mobile,
                        name: data.user.name || mobile
                    };
                    
                    postLoginSetup();
                } else {
                    alert(`âŒ Error: ${data.error || 'Login failed'}`);
                }
            } catch (error) {
                alert(`âŒ Connection Error: ${error.message}\n\nMake sure the server is running at ${SERVER}`);
            }
        }

        // Setup after login
        function postLoginSetup() {
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('mainUI').classList.remove('hidden');
            document.getElementById('userInfo').textContent = `${currentUser.name} (${currentUser.mobile})`;
            
            // Connect to Socket.IO
            socket = io(SERVER);
            
            socket.on('connect', () => {
                console.log('âœ… Socket connected');
                socket.emit('register_socket', { mobile: currentUser.mobile });
                document.querySelector('.status-indicator').className = 'status-indicator status-online';
            });
            
            socket.on('new_message', (msg) => {
                handleIncomingMessage(msg);
            });
            
            socket.on('disconnect', () => {
                console.log('âŒ Socket disconnected');
                document.querySelector('.status-indicator').className = 'status-indicator status-offline';
            });
            
            loadContacts();
        }

        // Load contacts
        async function loadContacts() {
            try {
                const response = await fetch(`${SERVER}/contacts`);
                const data = await response.json();
                
                if (data.ok) {
                    contacts = data.contacts.filter(c => c.mobile !== currentUser.mobile);
                    renderContacts();
                }
            } catch (error) {
                console.error('Error loading contacts:', error);
            }
        }

        // Render contacts list
        function renderContacts() {
            const list = document.getElementById('contactsList');
            list.innerHTML = '';
            
            if (contacts.length === 0) {
                list.innerHTML = '<div style="padding: 20px; text-align: center; color: #999;">No contacts yet</div>';
                return;
            }
            
            contacts.forEach(contact => {
                const div = document.createElement('div');
                div.className = 'contact-item';
                if (selectedContact && selectedContact.mobile === contact.mobile) {
                    div.classList.add('active');
                }
                
                div.innerHTML = `
                    <div class="name">${contact.name || contact.mobile}</div>
                    <div class="mobile">${contact.mobile}</div>
                `;
                
                div.onclick = () => selectContact(contact);
                list.appendChild(div);
            });
        }

        // Select contact
        async function selectContact(contact) {
            selectedContact = contact;
            renderContacts();
            
            document.getElementById('chatTitle').textContent = `Chat with ${contact.name || contact.mobile}`;
            
            await loadHistory(contact.mobile);
        }

        // Load chat history
        async function loadHistory(otherMobile) {
            try {
                const response = await fetch(`${SERVER}/history?a=${currentUser.mobile}&b=${otherMobile}`);
                const data = await response.json();
                
                if (data.ok) {
                    renderMessages(data.messages);
                }
            } catch (error) {
                console.error('Error loading history:', error);
            }
        }

        // Render messages
        function renderMessages(messages) {
            const container = document.getElementById('messagesContainer');
            container.innerHTML = '';
            
            if (messages.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">ðŸ’¬</div>
                        <p>No messages yet. Start the conversation!</p>
                    </div>
                `;
                return;
            }
            
            messages.forEach(msg => {
                appendMessage(msg, false);
            });
            
            scrollToBottom();
        }

        // Append message to chat
        function appendMessage(msg, isNew = true) {
            const container = document.getElementById('messagesContainer');
            
            // Remove empty state if exists
            const emptyState = container.querySelector('.empty-state');
            if (emptyState) {
                emptyState.remove();
            }
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${msg.from === currentUser.mobile ? 'sent' : 'received'}`;
            
            const timestamp = new Date(msg.timestamp * 1000).toLocaleString('en-US', {
                hour: 'numeric',
                minute: '2-digit',
                hour12: true
            });
            const sender = msg.from === currentUser.mobile ? 'You' : (selectedContact?.name || msg.from);
            
            let content = `
                <div class="message-header">${sender} â€¢ ${timestamp}</div>
                <div class="message-bubble">
            `;
            
            if (msg.text) {
                content += escapeHtml(msg.text);
            }
            
            if (msg.media || msg.media_b64) {
                const imgSrc = msg.media_b64 ? `data:image/jpeg;base64,${msg.media_b64}` : `data:image/jpeg;base64,${msg.media}`;
                content += `<br><img src="${imgSrc}" class="message-image" onclick="window.open('${imgSrc}', '_blank')" alt="Shared image">`;
            }
            
            content += `</div>`;
            messageDiv.innerHTML = content;
            container.appendChild(messageDiv);
            
            if (isNew) {
                scrollToBottom();
            }
        }

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Handle incoming message
        function handleIncomingMessage(msg) {
            if (selectedContact && msg.from === selectedContact.mobile) {
                appendMessage(msg, true);
            } else {
                // Show notification for messages from other contacts
                const contact = contacts.find(c => c.mobile === msg.from);
                const name = contact ? contact.name || contact.mobile : msg.from;
                
                // Browser notification (if permitted)
                if ('Notification' in window && Notification.permission === 'granted') {
                    new Notification('New Message', {
                        body: `${name}: ${msg.text || 'Sent an image'}`,
                        icon: 'ðŸ’¬'
                    });
                } else {
                    alert(`ðŸ’¬ New message from ${name}`);
                }
            }
        }

        // Send message
        function sendMessage() {
            if (!selectedContact) {
                alert('Please select a contact first');
                return;
            }
            
            const input = document.getElementById('messageInput');
            const text = input.value.trim();
            
            if (!text && !pendingImage) {
                return;
            }
            
            const payload = {
                from: currentUser.mobile,
                to: selectedContact.mobile,
                text: text,
                media_b64: pendingImage ? pendingImage.data : null,
                media_type: pendingImage ? pendingImage.type : null
            };
            
            socket.emit('send_message', payload);
            
            // Add to local chat
            appendMessage({
                from: currentUser.mobile,
                to: selectedContact.mobile,
                text: text,
                media_b64: pendingImage ? pendingImage.data : null,
                timestamp: Math.floor(Date.now() / 1000)
            }, true);
            
            input.value = '';
            clearImagePreview();
        }

        // Handle image selection
        function handleImageSelect() {
            const input = document.getElementById('imageInput');
            const file = input.files[0];
            
            if (!file) return;
            
            // Check file size (max 5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('Image size must be less than 5MB');
                input.value = '';
                return;
            }
            
            const reader = new FileReader();
            reader.onload = (e) => {
                const base64 = e.target.result.split(',')[1];
                pendingImage = {
                    data: base64,
                    type: 'image'
                };
                
                const preview = document.getElementById('imagePreview');
                preview.innerHTML = `
                    <img src="${e.target.result}" alt="Preview">
                    <div class="preview-info">
                        <strong>ðŸ“Ž Image attached</strong><br>
                        <small>${file.name} (${(file.size / 1024).toFixed(1)} KB)</small>
                    </div>
                    <button class="remove-preview" onclick="clearImagePreview()">Remove</button>
                `;
                preview.classList.remove('hidden');
            };
            reader.readAsDataURL(file);
        }

        // Clear image preview
        function clearImagePreview() {
            pendingImage = null;
            document.getElementById('imagePreview').classList.add('hidden');
            document.getElementById('imageInput').value = '';
        }

        // Handle Enter key
        function handleKeyPress(event) {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                sendMessage();
            }
        }

        // Scroll to bottom
        function scrollToBottom() {
            const container = document.getElementById('messagesContainer');
            setTimeout(() => {
                container.scrollTop = container.scrollHeight;
            }, 100);
        }

        // Request notification permission on load
        if ('Notification' in window && Notification.permission === 'default') {
            Notification.requestPermission();
        }

        // Enter key on login form
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('#loginScreen input');
            inputs.forEach(input => {
                input.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        login();
                    }
                });
            });
        });
    </script>
</body>
</html>
